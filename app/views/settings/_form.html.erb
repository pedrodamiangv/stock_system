<%= form_for(@setting, :validate => true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default devise-bs">
        <div class="panel-body">
          <div class="form-group">
            <%= f.label "Nombre de la Empresa" %><br>
            <%= f.text_field :name, class: "form-control", :required => true  %>
          </div>
          <div class="form-group">
            <%= f.label "Telefono" %><br>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Correo electrónico" %><br>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "RUC Nro." %><br>
            <%= f.text_field :ruc, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Descripción" %><br>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Histórico" %><br>
            <%= f.text_area :historic, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :logo %><br>
            <%= f.file_field :logo, class: "form-control", :required => true  %>
          </div>
          
          <div id="form-group">
            <%= f.label "Dirección" %>
            <%= select_tag "setting_addresses", options_from_collection_for_select(@addresses, 'id', 'direccion',@setting.addresses.map{ |j| j.id }), :multiple => true, :class => "form-control", :required => true %>
          </div>

          <%= link_to "Ingresar nueva dirección", new_address_person_people_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: "btn-link" } %>
            </br></br>
          <%= f.submit "Actualizar cambios", class: "btn btn-primary" %>
          <%= link_to "Cancelar", settings_path, class: "btn btn-large btn-inverse" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div>
