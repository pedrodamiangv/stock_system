<div class="flickr_pagination">
    <div class="page_info">
      <p id="notice"><%= notice %></p>

      <div class="container">
        <div class="row">
          <legend>Lista de Roles de Usuario</legend>

          <table  id="my-table" class="table table-bordered">
            <thead  class="table-title">
              <tr>
                <th class="span1 centrar">Rol</th>
                <th class="span1 centrar">Descripci√≥n</th>
                <th colspan="3" class="span5 centrar">Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% @roles.each do |role| %>
                <tr>
                  <td><%= role.role %></td>
                  <td><%= role.description %></td>
                  <td><%= link_to 'Ver', role %></td>
                  <td><%= link_to 'Editar', edit_role_path(role) %></td>
                  <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate @roles, :container => false %>
          </br></br>

          <%= link_to 'Nuevo Rol de Usuario', new_role_path %>
        </div>
      </div> 
    </div>
    
  </div>
