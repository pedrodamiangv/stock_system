<%= form_for(@store, :validate => true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="container">
    <div class="col-md-6 col-md-offset-1">
      <div class="panel panel-default devise-bs">
        <div class="panel-body">
          <div class="form-group">
            <%= f.label "Nombre del depósito" %><br>
            <%= f.text_field :name, class: "form-control", :required => true  %>
          </div>
          <div class="form-group">
            <%= f.label "Descripción" %><br>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          
          <div id="form-group">
            <%= f.label "Dirección/Lugar del depósito" %>
            <%= f.collection_select :address_id ,@addresses,:id,:direccion, { prompt: " -- Selecciona una direccion -- ", :selected => params[:search], }, class: "form-control", :required => true %>
          </div>

          <%= link_to "Ingresar nueva dirección", settings_path, { class: "btn-link" } %>
          </br></br>
          <%= f.submit "Guardar", class: "btn btn-primary" %>
          <%= link_to "Cancelar", settings_path, class: "btn btn-large btn-inverse" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

