<% provide(:title, "Depósitos") %>
<div class="flickr_pagination">
  <div class="page_info">
    <p id="notice"><%= notice %></p>

    <legend>Listado de depósitos</legend>

    <table  id="my-table" class="table table-bordered">
      <thead  class="table-title">
        <tr>
          <th class="span1 centrar">Nombre del depósito</th>
          <th class="span1 centrar">Descripcion</th>
          <th class="span1 centrar">Dirección</th>
          <th colspan="3" class="span5 centrar">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @stores.each do |store| %>
          <tr>
            <td><%= store.name %></td>
            <td><%= store.description %></td>
            <td><%= store.address.direccion %></td>
            <td><%= link_to 'Ver', store, class: "btn-link" %></td>
            <td><%= link_to 'Editar', edit_store_path(store), class: "btn-link" %></td>
            <td><%= link_to 'Eliminar', store, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @stores, :container => false %>
    </br></br>

    <%= link_to 'Nuevo depósito', new_store_path, class: "btn btn-link" %>
  </div>  
</div>

