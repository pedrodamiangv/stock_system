<%= bootstrap_devise_error_messages! %>
<div class="container">
  <div class="col-md-6 col-md-offset-1">
    <div class="panel panel-default devise-bs">
      <div class="panel-heading">
        <h4><%= t('Cambia tu contrase単a') %></h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('Nueva contrase単a') %>
            <%= f.password_field :password, autofocus: true, class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t('Confirmar contrase単a') %>
            <%= f.password_field :password_confirmation, class: "form-control"  %>
          </div>

          <%= f.submit "Cambiar mi contrase単a", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
