<%= bootstrap_devise_error_messages! %>
<div class="container">
    <div class="col-md-6 col-md-offset-1">
      <div class="panel panel-default devise-bs">
        <div class="panel-heading">
          <h4><%= t('Te olvidaste tu contraseña?') %></h4>
        </div>
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
            <div class="form-group">
              <%= f.label "Correo electrónico" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <%= f.submit "Enviarme las instrucciones", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
</div>
<%= render "devise/shared/links" %>
