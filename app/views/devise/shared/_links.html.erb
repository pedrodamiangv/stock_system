<%- if controller_name != 'sessions' %>
<%= link_to t("Inicie sesión"), new_session_path(resource_name), class: "btn-link" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to t("Registrarse"), new_registration_path(resource_name), class: "btn-link" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
<%= link_to t("Olvidaste tu contraseña?"), new_password_path(resource_name), class: "btn-link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<%= link_to t("No recibiste las instrucciones?"), new_confirmation_path(resource_name), class: "btn-link" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<%= link_to t("No recibiste las instrucciones de desbloqueo?"), new_unlock_path(resource_name), class: "btn-link" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <%= link_to t('.sign_in_with_provider', :provider => provider.to_s.titleize, :default => "Iniciar sessión con #{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider), class: "btn-link" %><br />
  <% end -%>
<% end -%>
