<%= bootstrap_devise_error_messages! %>
<div class="container">
  <div class="col-md-6 col-md-offset-1">
    <div class="panel panel-default devise-bs">
      <div class="panel-heading">
        <h4><%= t("Registrar nuevo usuario") %></h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.label "Persona" %>
            <%= f.collection_select :person_id ,@people,:id,:full_name_doc, { prompt: " -- Selecciona una persona registrada en el sistema -- ", :selected => params[:search], hide_label: :true}, class: "form-control", :required => true %>
          </div>
          <div class="form-group">
            <%= f.label "Roles" %>
            <div id="roles">
                <%= select_tag "user_roles", options_from_collection_for_select(@roles, 'id', 'role',resource.roles.map{ |j| j.id }), :multiple => true, :class => "form-control", :required => true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Correo electr칩nico" %>
            <%= f.email_field :email, autofocus: true, class: "form-control", :required => true %>
          </div>
          <div class="form-group">
            <%= f.label "Contrase침a" %><br />
            <%= f.password_field :password, class: "form-control", :required => true, :maxlength => 100, :minlength => 6 %>
          </div>
          <div class="form-group">
            <%= f.label "Confirmaci칩n de contrase침a" %>
            <%= f.password_field :password_confirmation, class: "form-control", :required => true, :maxlength => 100, :minlength => 6 %>
          </div>
          <%= f.submit "Registrarse", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
