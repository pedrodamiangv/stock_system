<div class="flickr_pagination">
    <div class="page_info">
      <p id="notice"><%= notice %></p>

      <div class="container">
        <div class="row">
          <legend>Lista de Personas registradas</legend>

          <table  id="my-table" class="table table-bordered">
            <thead  class="table-title">
              <tr>
                <th class="span1 centrar">Nombre</th>
                <th class="span1 centrar">Documento</th>
                <th class="span1 centrar">Telefono</th>
                <th class="span1 centrar">Email</th>
                <th class="span1 centrar">Sexo</th>
                <th class="span1 centrar">Fecha de Nacimiento</th>
                <th class="span1 centrar">Direcci√≥n</th>
                <th colspan="3" class="span5 centrar">Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% @people.each do |person| %>
                <tr>
                  <td><%= person.full_name %></td>
                  <td><%= person.doc %></td>
                  <td><%= person.phone %></td>
                  <td><%= person.user.email %></td>
                  <td><%= person.sex %></td>
                  <td><%= person.birthday %></td>
                  <td><%= person.birthday %></td>
                  <td><%= link_to 'Ver', person, class: "btn-link" %></td>
                  <td><%= link_to 'Editar', edit_person_path(person), class: "btn-link" %></td>
                  <td><%= link_to 'Eliminar', person, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate @people, :container => false %>
          </br></br>

          <%= link_to 'Nueva Persona', new_person_path, class: "btn btn-link" %>
        </div>
      </div> 
    </div>
    
  </div>
